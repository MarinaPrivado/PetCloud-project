.hero-button {
    display: inline-block;
    padding: 15px 30px;
    margin-top: 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.hero-button:hover {
    background-color: #45a049;
    transform: scale(1.05);
}